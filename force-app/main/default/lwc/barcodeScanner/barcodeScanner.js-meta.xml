<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Library Barcode Scanner</masterLabel>
    <description>Rapid barcode scanning interface for library item management</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__Tab</target>
        <target>lightning__UtilityBar</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__HomePage">
            <property 
                name="defaultAction" 
                type="String" 
                label="Default Action"
                description="Default action when component loads"
                datasource="checkout,return,info"
                default="checkout"/>
            <property 
                name="enableBulkMode" 
                type="Boolean" 
                label="Enable Bulk Mode by Default"
                description="Start with bulk mode enabled"
                default="false"/>
            <property 
                name="showStatistics" 
                type="Boolean" 
                label="Show Library Statistics"
                description="Display library statistics summary at top"
                default="true"/>
            <property 
                name="showMyItems" 
                type="Boolean" 
                label="Show My Items"
                description="Display user's Checked Out items"
                default="true"/>
            <property 
                name="maxRecentScans" 
                type="Integer" 
                label="Max Recent Scans"
                description="Maximum number of recent scans to display"
                default="20"
                min="5"
                max="50"/>
            <property 
                name="autoFocusDelay" 
                type="Integer" 
                label="Auto Focus Delay (ms)"
                description="Delay before auto-focusing barcode input"
                default="100"
                min="0"
                max="1000"/>
                    <supportedFormFactors>
        <supportedFormFactor type="Large"/>
        <supportedFormFactor type="Small"/>
    </supportedFormFactors>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>